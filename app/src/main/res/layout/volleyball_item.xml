<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_volleyball_rankingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:textSize="20sp"
        style="@style/highlight_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Top 0" />

    <ImageView
        android:id="@+id/iv_volleyball_flag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_volleyball_rankingNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_volleyball_teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team name"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_volleyball_flag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>