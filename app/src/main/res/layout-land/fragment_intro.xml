<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.IntroFragment">

    <TextView
        android:id="@+id/textView"
        style="@style/highlight_title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/regular_font"
        android:text="@string/tv_header_title"
        android:textSize="45sp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intro_subtitle_landscape"
        android:gravity="center"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textSize="25sp"
        android:text="@string/activityMain_login" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activityMain_About"
        android:textSize="25sp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:padding="10dp" />



</androidx.appcompat.widget.LinearLayoutCompat>